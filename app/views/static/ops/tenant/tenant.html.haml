%div{"ng-show" => "vm.afterGet"}
  .form-group{"ng-class" => "{'has-error': vm.angularForm($parent).name.$invalid}"}
    %label.col-md-2.control-label{"for" => "tenant_name"}
      = _("Name")
    .col-md-8
      %input.form-control{"type"        => "text",
                          "id"          => "tenant_name",
                          "name"        => "name",
                          "ng-model"    => "vm.tenantModel.name",
                          "ng-disabled" => "vm.tenantModel.default && vm.tenantModel.use_config_for_attributes",
                          "maxlength"   => "#{MAX_NAME_LEN}",
                          "required"    => "",
                          "auto-focus"  => "",
                          "checkchange" => ""}
      %span.help-block{"ng-show" => "vm.angularForm($parent).name.$invalid"}
        = _("Required")
  .form-group{"ng-class" => "{'has-error': vm.angularForm($parent).description.$invalid}"}
    %label.col-md-2.control-label{"for" => "tenant_description"}
      = _("Description")
    .col-md-8
      %input.form-control{"type"        => "text",
                          "id"          => "tenant_description",
                          "name"        => "description",
                          "ng-model"    => "vm.tenantModel.description",
                          "maxlength"   => "#{MAX_DESC_LEN}",
                          "required"    => "",
                          "checkchange" => ""}
        %span.help-block{"ng-show" => "vm.angularForm($parent).description.$error.required"}
          = _("Required")
  .form-group{"ng-show" => "vm.tenantModel.default"}
    %label.col-md-2.control-label
      = _("Use Configuration Settings")
    .col-md-10
      %input#use_config{"bs-switch"       => "",
                        "type"            => "checkbox",
                        "name"            => "use_config_for_attributes",
                        "ng-model"        => "vm.tenantModel.use_config_for_attributes",
                        "switch-on-text"  => "Yes",
                        "switch-off-text" => "No",
                        "checkchange"     => ""}

  = render :partial => "layouts/angular/generic_form_buttons",
           :locals  => {:angularForm => "vm.angularForm($parent)"}
